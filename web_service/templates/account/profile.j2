{% extends "base.j2" %}

{% block content %}

  <div class="section-account">
      {% include "account/navigation.j2" %}
      <div class="section-content">
        <div class="profile">
          <form class="form profile-form" method="post" enctype="multipart/form-data">
            {% csrf_token %}
            <div class="row flex">
              <div class="row-block">
                <div class="form-group">
                  <label class="form-label" for="avatar">Аватар
                  </label>
                  <div class="p-avatar profile-avatar_noimg">
                    {% if user.photo %}
                        <label class="profile-fileLabel" for="avatar"><img class="avatar-img" src="{{ user.photo.url }}" alt="Аватар" /> Загрузить другой аватар</label>
                        <input class="form-input" id="avatar" name="avatar" type="file" data-validate="onlyImgAvatar" hidden="hidden"/>
                    {% else %}
                      <label class="profile-fileLabel" for="avatar"><img class="avatar-img" src="{{ static('img/download.svg') }}" alt="Аватар" />Загрузить аватар</label>
                      <input class="form-input" id="avatar" name="avatar" type="file" data-validate="onlyImgAvatar" hidden="hidden"/>
                    {% endif %}
                  </div>
                </div>
              </div>
              <div class="row-block">
                <div class="form-group">
                  <label class="form-label" for="name">ФИО
                  </label>
                  {% if user.last_name %}
                    <input class="form-input" id="name" name="name" type="text" value="{{user.last_name}} {{user.first_name}} {{user.surname}}" data-validate="require"/>
                  {% else %}
                    <input class="form-input" id="name" name="name" type="text" data-validate="require"/>
                  {% endif %}
                </div>
                <div class="form-group">
                  <label class="form-label" for="username">Никнейм
                  </label>
                  {% if user.username %}
                    <input class="form-input" id="name" name="username" type="text" value="{{user.username}}" data-validate="require"/>
                  {% else %}
                    <input class="form-input" id="name" name="username" type="text" data-validate="require"/>
                  {% endif %}
                </div>
                <div class="form-group">
                  <label class="form-label" for="phone">Телефон</label>
                  <input class="form-input" id="phone" name="phone" type="text" value="{{ user.phone_number }}" placeholder="номер телефона" autocomplete="off"/>
                </div>
                <div class="form-group">
                  <label class="form-label" for="mail">E-mail</label>
                  <input class="form-input" id="mail" name="mail" type="text" value="{{ user.email }}" data-validate="require" autocomplete="off"/>
                </div>
                <div class="form-group">
                  <label class="form-label" for="password">Пароль</label>
                  <input class="form-input" id="password" name="password" type="password" placeholder="Тут можно изменить пароль" autocomplete="off"/>
                </div>
                <div class="form-group">
                  <label class="form-label" for="passwordReply">Подтверждение пароля</label>
                  <input class="form-input" id="passwordReply" name="passwordReply" type="password" placeholder="Введите пароль повторно" autocomplete="off"/>
                </div>
                <div class="form-group">
                  <div class="profile-btn">
                    <button class="btn btn_success" type="submit">Сохранить</button>
                  </div>
                  <div class="profile-success">
                    {% if messages %}
                      <ul class="messages">
                        {% for message in messages %}
                          <li{% if message.tags %} class="{{ message.tags }}"{% endif %}>{{ message }}</li>
                        {% endfor %}
                      </ul>
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
  </div>



{% endblock %}
